<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ViewModel="clr-namespace:CEsharp.ViewModels"
             x:Class="CEsharp.View.DeepRock"
             x:DataType="ViewModel:DeepRockCheat"
             Title="DeepRock">

    <VerticalStackLayout >
        <HorizontalStackLayout>
            <Frame x:Name="AnimatedButton" WidthRequest="30" 
                    HeightRequest="30" BackgroundColor="LightBlue" CornerRadius="50" 
                   AbsoluteLayout.LayoutBounds="0.5, 0.5, AutoSize, AutoSize" 
                   AbsoluteLayout.LayoutFlags="PositionProportional">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnButtonTapped"/>
                </Frame.GestureRecognizers>
            </Frame>
            <Label IsEnabled="{Binding IsEnable}  " Text="{Binding  InfoMsg}"  WidthRequest="300"  HeightRequest="30" HorizontalOptions="Center" VerticalTextAlignment="Center"></Label>
        </HorizontalStackLayout>
  
    </VerticalStackLayout>


</ContentPage>